@echo off
set ARG=%1

if "%ARG%"=="detallado" (
    set DETALLE=true
) else (
    set DETALLE=false
)

for /l %%i in (1,1,5) do (
    echo Ejecuci칩n %%i
    if "%DETALLE%"=="true" (
        echo Informaci칩n detallada:
        hostname
        ipconfig /all
        tasklist
        wmic cpu get caption
        wmic os get caption
        wmic memorychip get capacity
        wmic diskdrive get size
        wmic bios get serialnumber
        wmic logicaldisk get size,freespace
    ) else (
        echo Informaci칩n b치sica:
        wmic cpu get caption
        wmic memorychip get capacity
        wmic diskdrive get size
    )
)

